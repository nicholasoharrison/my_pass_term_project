{
    "name": "Django Dev Environment",
    "dockerFile": "Dockerfile",
    "customizations": {
        "vscode": {
            "settings": {
                "python.pythonPath": "/usr/local/bin/python",
                "terminal.integrated.shell.linux": "/bin/bash"
            },
            "extensions": [
                "ms-python.python",
                "batisteo.vscode-django",
                "ms-python.vscode-pylance"
            ]
        }
    },
    "forwardPorts": [
        8000
    ],
    "postCreateCommand": "python3 -m venv venv && source venv/bin/activate && pip install -r requirements.txt",
    "remoteUser": "vscode"
}